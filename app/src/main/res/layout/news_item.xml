<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@color/black"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="0dp">

    <TextView
        android:id="@+id/month_name"
        android:layout_width="150dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:contentDescription="monthName"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="serif-monospace"
        tools:targetApi="jelly_bean"
        tools:text="Июнь" />

    <LinearLayout
        android:id="@+id/postListLayout"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/month_name">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="@dimen/padding"
            android:contentDescription="postTypeImage"
            app:srcCompat="@android:drawable/radiobutton_off_background" />

        <TextView
            android:id="@+id/news_label"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding"
            android:layout_marginTop="@dimen/padding"
            android:contentDescription="postLabel"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="14sp"
            android:typeface="normal"
            app:fontFamily="serif"
            tools:text="Who is.. James bond??!" />

        <TextView
            android:id="@+id/news_category"
            android:layout_width="96dp"
            android:layout_height="wrap_content"

            android:layout_marginEnd="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginTop="@dimen/padding"
            android:contentDescription="postType"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:typeface="normal"
            app:fontFamily="sans-serif-condensed"
            tools:text="Artist" />
    </LinearLayout>
</android.support.v7.widget.CardView>